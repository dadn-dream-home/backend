        {
            "label": "generate backend protobuf",
            "type": "shell",
            "command": "protoc --go_out=. --go_opt=paths=source_relative --go-grpc_out=. --go-grpc_opt=paths=source_relative protobuf/backend.proto"
        }
    ]
}